<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.lymno.myfridge" >

    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.CHANGE_NETWORK_STATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:name="com.activeandroid.app.Application"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >

        <!-- ActiveAndroid -->
        <meta-data
            android:name="AA_DB_NAME"
            android:value="example.db" />
        <meta-data
            android:name="AA_DB_VERSION"
            android:value="5" />
        <meta-data
            android:name="AA_MODELS"
            android:value="com.lymno.myfridge.model.Recipe,

        com.lymno.myfridge.model.Ingredient,
        com.lymno.myfridge.model.UserProduct,
        com.lymno.myfridge.model.Category" />
        <!-- ActiveAndroid -->
        <activity
            android:name=".activity.MainActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name=".barcode_scanner.ScannerFragmentActivity"
            android:label="Scan"
            android:theme="@style/Base.Theme.AppCompat.Light.DarkActionBar"
            android:uiOptions="splitActionBarWhenNarrow" >
            <meta-data
                android:name="android.support.UI_OPTIONS"
                android:value="splitActionBarWhenNarrow" />
        </activity>
        <activity android:name=".activity.FoodInfoActivity" />
        <activity android:name=".activity.RecipeActivity" />
        <activity android:name=".activity.ProductAdd" />
        <activity android:name=".activity.ProductAddNew" ></activity>
        <activity
            android:name=".activity.CheckDataActivity"
            android:noHistory="true"
            android:theme="@android:style/Theme.NoDisplay">
            >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activity.LoadDataActivity">
        </activity>
    </application>

</manifest>
